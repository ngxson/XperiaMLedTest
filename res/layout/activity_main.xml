<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allowed value: 0 to 255" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingLeft="10dip" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="100dip"
                                android:layout_height="wrap_content"
                                android:text="red" />

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:focusableInTouchMode="true"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="number"
                                android:nextFocusLeft="@id/editText1"
                                android:nextFocusUp="@id/editText1"
                                android:windowSoftInputMode="stateHidden" >

                                <requestFocus />
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="100dip"
                                android:layout_height="wrap_content"
                                android:text="green" />

                            <EditText
                                android:id="@+id/editText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:focusableInTouchMode="true"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="number"
                                android:nextFocusLeft="@id/editText2"
                                android:nextFocusUp="@id/editText2"
                                android:windowSoftInputMode="stateHidden" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dip" >

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="100dip"
                                android:layout_height="wrap_content"
                                android:text="blue" />

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:focusableInTouchMode="true"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="number"
                                android:nextFocusLeft="@id/editText3"
                                android:nextFocusUp="@id/editText3"
                                android:windowSoftInputMode="stateHidden" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set LED"
                        android:onClick="setled" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn off"
                        android:onClick="turnoff" />

</LinearLayout>
